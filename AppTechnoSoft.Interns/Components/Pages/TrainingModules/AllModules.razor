@page "/course/modules"

<PageTitle>Training Modules</PageTitle>
@attribute [Authorize(Roles = Role.AdminsAndInstructor)]

@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject ISnackbar SnackBar

@if (loadingData)
{
    <Loading Size="Size.Large" />
}
else if (noData)
{
    <ApplicationAlert Text="It looks like you have not contributed any course modules yet." />
}
else
{
    <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-3">
        <MudTabPanel Text="Your Contribution" Icon="@Icons.Material.Sharp.AddBox">            
            <MudExpansionPanels MultiExpansion="true" Elevation="3" Outlined="false">
                <MudGrid Spacing="2">
                    @foreach (var widget in myWidgets)
                    {
                        <MudItem xxl="3" xl="4" lg="4" md="6" xs="12">
                            <Module Widget="@widget" DeleteCallBack="DeleteInitiated" />
                        </MudItem>
                    }
                    <MudItem xxl="3" xl="4" lg="4" md="6" xs="12" Class="align-self-center">
                        <MudButton StartIcon="@Icons.Material.Filled.Add"                        
                                       Href="/widgets/add"
                                       Variant="Variant.Outlined"                                       
                                       Size="Size.Large">New Course Module</MudButton>
                    </MudItem>
                </MudGrid>
            </MudExpansionPanels>
        </MudTabPanel>
        <MudTabPanel Text="All Course Modules" Icon="@Icons.Material.Sharp.ViewModule">
            
        </MudTabPanel>
    </MudTabs>
}

@code {

    [CascadingParameter]
    private Task<AuthenticationState> AuthTask { get; set; } = null!;

    List<Widget> myWidgets = [];

    private List<Tag> tags = [];
    bool loadingData;
    bool noData;

    protected override async Task OnInitializedAsync()
    {
        loadingData = true;

        var state = await AuthTask;
        var userName = state.User.GetUserName();

        using var Db = DbFactory.CreateDbContext();
        myWidgets = await Db.Widgets
            .Where(x => x.Title == WidgetType.CourseModule && x.CreatedBy == userName)
            .Include(x => x.Tags)
            .OrderBy(x => x.Created)
            .AsNoTracking()
            .ToListAsync();

        loadingData = false;

        if (myWidgets is null || myWidgets.Count == 0)
        {
            noData = true;
            return;
        }
        else
        {
            noData = false;
        }
    }

    private async Task DeleteInitiated(Widget widget)
    {
        using var Db = DbFactory.CreateDbContext();
        Db.Widgets.Remove(widget);
        var rowsAffected = await Db.SaveChangesAsync();

        if (rowsAffected > 0)
        {
            SnackBar.Add("Module Deleted successfully", Severity.Success);
            myWidgets.Remove(widget);
        }
        else
        {
            SnackBar.Add("Module Delete failed", Severity.Error);
        }
    }

    private IEnumerable<Widget> FilterWidgets(string tag) =>
        myWidgets.Where(x => x.Tags!.Any(y => y.Name == tag));
}
