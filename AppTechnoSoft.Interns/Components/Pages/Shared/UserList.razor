<MudGrid>
    @foreach (var member in Users)
    {
        var user = LoggedInUserId == member.UserId ? $"{member.Name} (You)" : member.Name;
        <MudItem lg="1" md="2" sm="4" xs="6">
            <UserProfile AvatarPath="@member.ProfilePath" Name="@member.Name" />
        </MudItem>
    }
</MudGrid>


@code {

    [Parameter]
    public List<StudentLightViewModel> Users { get; set; } = [];

    [Parameter]
    public string LoggedInUserId { get; set; } = string.Empty;
}
