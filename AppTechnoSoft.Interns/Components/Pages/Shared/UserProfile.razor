<MudStack AlignItems="AlignItems.Center">
    <MudAvatar Style="height:80px; width:80px; font-size:2rem;">
        @if (AvatarPath is null or "")
        {
            <MudIcon Icon="@Icons.Material.Sharp.Person" Size="Size.Large" />
        }
        else
        {
            <MudImage Src="@AvatarPath" />
        }
    </MudAvatar>
    <MudText Typo="Typo.body2" HtmlTag="strong">@Name</MudText>
</MudStack>

@code {
    [Parameter]
    public string AvatarPath { get; set; } = "/favicon.png";

    [Parameter]
    public string Name { get; set; } = string.Empty;
}
