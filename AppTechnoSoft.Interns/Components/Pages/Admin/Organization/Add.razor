@page "/admin/organizations/add"

@attribute [Authorize(Roles = Role.Admins)]
@inject ISnackbar SnackBar
@inject NavigationManager Navigation
@inject ApplicationDbContext Db

<PageTitle>Add Organization</PageTitle>

<EditForm Model="@model" OnValidSubmit="OnValidSubmit">
    <MudTextField Label="Title" @bind-Value="model.Name" Variant="Variant.Outlined" />
    <MudTextField Class="mt-3" Lines="5" @bind-Value="model.Details" Variant="Variant.Outlined" />
    <MudSelect @bind-Value="@model.OrganizationType">
        @foreach(var org in Enum.GetValues<OrganizationType>())
        {
            <MudSelectItem Value="@org">@org</MudSelectItem>
        }
    </MudSelect>

    <MudButton ButtonType="ButtonType.Submit"
               Variant="Variant.Filled"
               Color="Color.Tertiary"
               StartIcon="@Icons.Material.Filled.Save">
        Save
    </MudButton>
</EditForm>

@code {
    
    Organization model = new();

    private async Task OnValidSubmit(EditContext context)
    {        
        Db.Organizations.Add(model);
        var rowsAffected = await Db.SaveChangesAsync();

        if (rowsAffected > 0)
        {
            SnackBar.Add("New organization added successfully", Severity.Success);
            Navigation.NavigateTo("/admin/organizations");
        }
        else
        {
            SnackBar.Add("New organization save failed", Severity.Error);
        }
    }
}
