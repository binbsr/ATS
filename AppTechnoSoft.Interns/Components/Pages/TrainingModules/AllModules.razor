@page "/course/modules"

<PageTitle>Training Modules</PageTitle>
@attribute [Authorize(Roles = Role.AdminsAndInstructor)]

@inject IDbContextFactory<ApplicationDbContext> DbFactory
@inject ISnackbar SnackBar

@if (loadingData)
{
    <Loading Size="Size.Large" />
}
else if (noData)
{
    <ApplicationAlert Text="Looks like you have not contributed any course modules yet." />
}
else
{
    <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-3">
        <MudTabPanel Text="My Contribution" Icon="@Icons.Material.Sharp.AddBox">
            <ModulesList Widgets="myWidgets" DeleteCallBack="DeleteInitiated" />
        </MudTabPanel>
        <MudTabPanel Text="All Course Modules" Icon="@Icons.Material.Sharp.ViewModule" OnClick="GetCourseModules">
            <MudChipSet T="Tag"
                        SelectionMode="SelectionMode.MultiSelection"
                        CheckMark="true" Size="Size.Large"
                        SelectedValuesChanged="FilterWidgets"
                        SelectedColor="Color.Primary"
                        Class="mb-3">
                @foreach (var tag in tags)
                {
                    <MudChip Value="@tag" Text="@(tag.Name)" />
                }
            </MudChipSet>
            @if (loadingTab)
            {
                <Loading />
            }
            else
            {
                <ModulesList Widgets="filterWidgets" DeleteCallBack="DeleteInitiated" />
            }
        </MudTabPanel>
    </MudTabs>
}

@code {

    [CascadingParameter]
    private Task<AuthenticationState> AuthTask { get; set; } = null!;

    List<Widget> myWidgets = [];
    List<Widget> allWidgets = [];
    List<Widget> filterWidgets = [];

    private List<Tag> tags = [];
    bool loadingData;
    bool loadingTab;
    bool noData;

    protected override async Task OnInitializedAsync()
    {
        loadingData = true;

        var state = await AuthTask;
        var userName = state.User.GetUserName();

        using var Db = DbFactory.CreateDbContext();
        myWidgets = await Db.Widgets
            .AsNoTracking()
            .Where(x => x.Title == WidgetType.CourseModule && x.CreatedBy == userName)
            .Include(x => x.Tags)
            .OrderBy(x => x.Created)
            .ToListAsync();

        loadingData = false;

        if (myWidgets is null || myWidgets.Count == 0)
        {
            noData = true;
            return;
        }
        else
        {
            noData = false;
        }
    }

    private async Task DeleteInitiated(Widget widget)
    {
        using var Db = DbFactory.CreateDbContext();
        Db.Widgets.Remove(widget);

        var rowsAffected = await Db.SaveChangesAsync();

        if (rowsAffected > 0)
        {
            SnackBar.Add("Module Deleted successfully", Severity.Success);
        }
        else
        {
            SnackBar.Add("Module Delete failed", Severity.Error);
        }
    }

    private async Task GetCourseModules()
    {
        using var Db = DbFactory.CreateDbContext();

        tags = await Db.Tags.AsNoTracking().ToListAsync();

        loadingTab = true;

        allWidgets = await Db.Widgets
            .AsNoTracking()
            .Where(x => x.Title == WidgetType.CourseModule)
            .Include(x => x.Tags)
            .OrderBy(x => x.Description)
            .ToListAsync();

        filterWidgets = allWidgets;
        loadingTab = false;
    }

    private void FilterWidgets(IReadOnlyCollection<Tag> chips)
    {
        // fast path: no selection => show all
        if (chips == null || chips.Count == 0)
        {
            filterWidgets = allWidgets;
            return;
        }

        var selectedTags = chips.Select(x => x.Name).ToList();
        filterWidgets = allWidgets.Where(w => w.Tags != null && w.Tags.Any(y => selectedTags.Contains(y.Name))).ToList();
    }

}
