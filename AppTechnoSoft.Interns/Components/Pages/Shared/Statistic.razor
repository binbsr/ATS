@typeparam T
<MudStack Row Spacing="0">
    <MudText Typo="Typo.h4" Style="font-weight: bolder">@Value</MudText>
    @if(ShowStar)
    {
        <MudIcon Icon="@Icons.Material.Sharp.Star" Color="Color.Warning" Size="Size.Large" />
    }
    <MudText Typo="Typo.body1" Class="ml-2">@Label</MudText>
</MudStack>

@code{
    [Parameter]
    public string Label { get; set; } = "";

    [Parameter]
    public T Value { get; set; } = default!;

    [Parameter]
    public bool ShowStar { get; set; } = true;
}