<MudStack AlignItems="AlignItems.Center" Row="@Horizontal">
    <MudAvatar Style="height:64px; width:64px; font-size:2rem;">
        @if (AvatarPath is null or "")
        {
            <MudIcon Icon="@Icons.Material.Sharp.Person" Size="Size.Large" />
        }
        else
        {
            <MudImage Src="@AvatarPath" />
        }
    </MudAvatar>
    <MudText Typo="Typo.body2" HtmlTag="strong">@Name</MudText>
</MudStack>

@code {
    [Parameter]
    public string AvatarPath { get; set; } = "/person.png";

    [Parameter]
    public string Name { get; set; } = string.Empty;

    [Parameter]
    public bool Horizontal { get; set; } = false;
}
