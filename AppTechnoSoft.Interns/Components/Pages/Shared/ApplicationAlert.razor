<MudAlert Severity="@Type" Elevation="5" Style="font-size:1.2rem" NoIcon>    
    <MudIcon Icon="@Icons.Material.Sharp.Info" Size="Size.Large" />
    @Text
    @if (Navigation is not "")
    {
        <MudLink style="font-size:1.2rem" Href="@Navigation"> Click here to register</MudLink>
    }
    @ChildContent
</MudAlert>

@code {

    [Parameter]
    public required string Text { get; set; }

    [Parameter]
    public string Navigation { get; set; } = "";

    [Parameter]
    public Severity Type { get; set; } = Severity.Info;

    [Parameter]
    public RenderFragment? ChildContent { get; set; }
}
