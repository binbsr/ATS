<MudTimelineItem Color="@(Enabled ? Color.Success : Color.Default)"
                 Size="Size.Large"
                 Variant="Variant.Outlined" Elevation="5">
    <ItemDot>
        <MudIcon Size="Size.Large" Icon="@BubbleIcon" />
    </ItemDot>
    <ItemContent>
        <MudText Align="Align.Center">@Text</MudText>
    </ItemContent>
</MudTimelineItem>

@code {
    [Parameter]
    public bool Enabled { get; set; }

    [Parameter]
    public string BubbleIcon { get; set; }

    [Parameter]
    public string Text { get; set; }
}
