@inherits LayoutComponentBase

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Style="@("background:" + Colors.Blue.Darken3)">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudSpacer />
        <Login />
    </MudAppBar>
    <MudDrawer @bind-Open="_drawerOpen" Elevation="2">
        <MudDrawerHeader Class="px-1">
            <MudImage Src="/apptechnosoft.png" Alt="App Technosoft" Height="70" />
            <MudText Typo="Typo.h6" Align="Align.Center">APP TECHNOSOFT</MudText>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent Class="px-3 mt-3">
        @Body
    </MudMainContent>    
</MudLayout>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>

@code {
    bool _drawerOpen = true;    

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}